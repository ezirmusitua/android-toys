<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.serviceexample.MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Service"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp" />
        <Button
            android:id="@+id/btn_start_service"
            android:text="start service"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:onClick="onClickStartService" />
        <Button
            android:id="@+id/btn_stop_service"
            android:text="stop service"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:onClick="onClickStopService" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
        <TextView
            android:text="Intent Service"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp" />
        <Button
            android:id="@+id/btn_start_intent_service"
            android:text="start service"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:onClick="onClickStartService" />
        <Button
            android:id="@+id/btn_stop_intent_service"
            android:text="stop service"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:onClick="onClickStopService" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
        <TextView
            android:text="Bind Service"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp" />
        <Button
            android:id="@+id/btn_bind_service"
            android:text="bind service"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:onClick="onClickStartService" />
    </LinearLayout>

</LinearLayout>
