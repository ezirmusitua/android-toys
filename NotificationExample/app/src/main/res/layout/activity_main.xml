<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.notificationexample.MainActivity">
    <Button
        android:id="@+id/btn_normal_notification"
        android:text="@string/btn_normal_notification"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:onClick="onClickCreateNotification"/>
    <Button
        android:id="@+id/btn_big_notification"
        android:text="@string/btn_big_notification"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:onClick="onClickCreateNotification"/>

</LinearLayout>
