<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context="com.example.android.googlelocationexample.MainActivity">

    <TextView
        android:id="@+id/text_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="1" />
    <TextView
        android:id="@+id/text_activity_recognize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="10"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="44dp" />
    <TextView
        android:id="@+id/text_geo_fence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="1" />
    <Button
        android:id="@+id/btn_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request"
        android:onClick="requestActivityUpdates" />

    <Button
        android:id="@+id/btn_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove"
        android:onClick="removeActivityUpdates" />
    <Button
        android:id="@+id/btn_add_geo_fence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add GeoFence"
        android:onClick="addGeoFence" />

</LinearLayout>
