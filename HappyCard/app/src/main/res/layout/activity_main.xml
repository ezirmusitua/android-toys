<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.jferroal.happycard.MainActivity"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:src="@drawable/flower"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:text="@string/text_quantity_title"
            android:textAlignment="center"
            android:textSize="32sp"
            android:textColor="@android:color/holo_red_dark"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:id="@+id/text_title" />
        <TextView
            android:textAlignment="center"
            android:id="@+id/text_quantity"
            android:ems="4"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/text_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />
        <Button
            android:id="@+id/btn_add"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="@string/btn_quantity_sub"
            android:layout_alignBottom="@+id/text_quantity"
            android:layout_toEndOf="@+id/text_quantity"
            android:onClick="decrement"/>

        <Button
            android:id="@+id/btn_sub"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="@string/btn_quantity_add"
            android:layout_alignBottom="@+id/text_quantity"
            android:layout_toStartOf="@+id/text_quantity"
            android:onClick="increment"/>

        <TextView
            android:textAlignment="center"
            android:textSize="36sp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_width="wrap_content"
            android:ems="4"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:layout_below="@id/text_quantity"
            android:layout_centerHorizontal="true"
            android:id="@+id/text_total_price" />
        <Button
            android:id="@+id/button_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:onClick="submitOrder"
            android:text="@string/btn_quantity_order" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:padding="8dp">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@color/colorAccent"/>
        <EditText
            android:id="@+id/editText"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:text="@string/text_input_placeholder" />
        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@android:drawable/ic_input_add" />
    </LinearLayout>
</LinearLayout>
